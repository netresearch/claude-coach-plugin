{
  "description": "Coach plugin hooks for friction signal detection and learning (async for performance)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/async_wrapper.sh detect_signals.py --phase=pre --content=\"$(cat)\"",
            "timeout": 1
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/async_wrapper.sh detect_signals.py --phase=tool --from-stdin",
            "timeout": 1
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/async_wrapper.sh aggregate.py --verbose",
            "timeout": 1
          }
        ]
      }
    ]
  }
}
