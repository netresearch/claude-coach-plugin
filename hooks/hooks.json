{
  "description": "Coach plugin hooks for friction signal detection and learning",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-coach/bin/coach-run detect_signals.py --phase=pre --content=\"$(cat)\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-coach/bin/coach-run detect_signals.py --phase=tool --from-stdin",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-coach/bin/coach-run aggregate.py --verbose",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
